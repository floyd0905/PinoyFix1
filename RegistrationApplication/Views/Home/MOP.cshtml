@{
    Layout = "~/Views/Shared/_RegistrationApplicationLayout.cshtml";
}

<div class="row center" ng-app="myApp" ng-controller="myController" style="position: relative;">
    <!-- Main Page Header -->
    <div class="col s12 m12 l12" style="margin-bottom: 120px;">
        <div class="col s12 m12 l12" style="margin-bottom: 120px;">
            <div class="pinoyfix-banner">
                <h1 class="brand-title">Pinoy<span>Fix</span></h1>
            </div>
        </div>

        <!-- Left Side -->
        <div class="col s12 m2 l2"> </div>

        <!-- Middle Content -->
        <div class="registration-main-content col s12 m8 l8">
            <div class="row">
                <div class="col s12 m12">
                    <div class="z-depth-5 card blue-grey darken-1"
                         style="border-radius: 10px; display: flex; flex-direction: column; align-items: center; background-color: rgba(43, 39, 56, 0.8) !important; height: 450px; padding: 30px;">

                        <h3 style="color: white;">Step 3 to 3</h3>
                        <h3 style="color: white; font-weight: bold;">Choose how to Pay</h3>

                        <!-- Payment Methods -->
                        <div class="payment-card" style="margin-bottom: 14px; height: 55px;" onclick="showPopup('gcashModal')">
                            Digital Wallet
                            <img src="~/wwwroot/assets/images/gcash.png"
                                 alt="GCash"
                                 style="height:40px; margin: 15px 0;">
                        </div>

                        <div class="payment-card" onclick="showPopup('cardModal')">
                            Credit or Debit Card
                            <img src="https://upload.wikimedia.org/wikipedia/commons/0/04/Mastercard-logo.png"
                                 alt="Mastercard"
                                 style="height: 20px; margin-left: 8px;">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/a/a6/Logo_NIKE.svg"
                                 alt="Nike"
                                 style="height: 20px; margin-left: 5px;">
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side -->
        <div class="col s12 m2 l2"> </div>

        <!-- Footer -->
        <div class="col s12 m12 l12"> </div>
    </div>

<!-- GCash Modal -->
<div id="gcashModal" class="modal-overlay">
    <div class="modal-content">

        <span class="close-btn"
              style="margin-left: 265px;"
              onclick="closePopup('gcashModal')">✖</span>
        <div style="display: flex; justify-content: space-between; align-items: center;">


            <h4 style="color: white; margin-left: 65px; ">Step 3 to 3</h4>


        </div>

        <h4 style="color: white; font-weight: bold;">Set up Gcash</h4>

        <img src="~/wwwroot/assets/images/gcash.png"
             alt="GCash"
             style="height:40px; margin: 15px 0;">

        <p style="color: white; height: 20px;">Enter your Mobile Number:</p>

        <div class="phone-input">
            <img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Flag_of_the_Philippines.svg"
                 alt="PH Flag" class="flag-icon">
            <span>+63</span>
            <input type="tel" placeholder="Mobile Number" required style="color: #000 !important; background: #fff !important;">

        </div>

        <button class="membership-btn" onclick="redirectToMembership()">Submit Membership</button>
    </div>
</div>

<div id="cardModal" class="modal-overlay">
    <div class="modal-content">
        <!-- Close Button (Top-Left Corner Inside Modal) -->
        <span class="close-btn" style="margin-left: 265px; margin-bottom: 20px;"onclick="closePopup('cardModal')">✖</span>

        <h4 style="color: white; margin-top: 10px;">Step 3 to 3</h4>
        <h5 style="color: white; font-weight: bold;">Set up Credit/Debit Card</h5>

        <img src="https://upload.wikimedia.org/wikipedia/commons/0/04/Mastercard-logo.png"
             alt="Mastercard"
             style="height: 40px; margin: 15px 0;">
       

        <p style="color: white; height: 20px;">Enter your Card Details:</p>

        <div class="phone-input" style="margin-bottom:20px;">
            <input type="text" placeholder="Card Number" required style="color: #000 !important; background: #fff !important;">
        </div>

        <div class="phone-input">
            <input type="text" placeholder="MM/YY" required style="color: #000 !important; background: #fff !important;">
            <input type="text" placeholder="CVV" required style="color: #000 !important; background: #fff !important;">
        </div>

        <button class="membership-btn" onclick="redirectToMembership()">Submit Membership</button>
    </div>
</div>

<!-- CSS Styling -->
<style>
    .payment-card {
        background: #fff;
        border-radius: 15px;
        padding: 15px 30px;
        width: 350px;
        color: #000;
        font-weight: bold;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.8);
        display: flex;
        align-items: center;
        justify-content: space-between;
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .payment-card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px #f39c12;
        }

    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(5px);
        justify-content: center;
        align-items: center;
        animation: fadeIn 0.5s ease-in-out;
    }

    .modal-content {
        background-color: rgba(43, 39, 56, 0.9);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.8);
        text-align: center;
        width: 350px;
    }

    .phone-input {
        display: flex;
        align-items: center;
        background: #fff;
        border-radius: 8px;
        padding: 10px;
        width: 100%;
        height: 55px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.8);
    }

    .flag-icon {
        height: 20px;
        margin-right: 8px;
    }

    .phone-input span {
        font-weight: bold;
        margin-right: 5px;
    }

    .phone-input input {
        border: none;
        outline: none;
        flex: 1;
        background: transparent;
        color: #000 !important;/* Ensures text appears in black */
        caret-color: #000 !important; /* Ensures cursor is also black */
    }

    .membership-btn {
        background-color: #546e7a;
        border: none;
        color: #fff;
        padding: 10px 50px;
        border-radius: 5px;
        margin-top: 20px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .membership-btn:hover {
            background-color: #3d5058;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    .close-btn {
        color: #fff;
        bottom: 10px;
        font-size: 24px;
        cursor: pointer;
        transition: transform 0.3s ease;
        background: transparent; /* Clean look */
        border: none;
    }

        .close-btn:hover {
            transform: scale(1.2);
            color: #f39c12; /* Highlight effect */
        }
    .pinoyfix-banner {
        position: absolute;
        top: 20px;
        left: 60px;
    }

    .brand-title {
        font-family: 'Poppins', sans-serif;
        font-size: 60px;
        font-weight: 900;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
        margin: 0;
    }

        .brand-title span {
            color: #FFD700; /* Gold Color for 'Fix' */
        }


</style>

<!-- JavaScript for Popup -->
<script>
  
    function showPopup(modalId) {
        const modal = document.getElementById(modalId);
        modal.style.display = 'flex';
        modal.style.animation = 'fadeIn 0.5s ease-in-out';
    }

    function closePopup(modalId) {
        const modal = document.getElementById(modalId);
        if (modal) {
            modal.style.animation = 'fadeOut 0.5s ease-in-out';

            setTimeout(() => {
                modal.style.display = 'none';
            }, 500); // Matches the animation duration
        }
    }
    function redirectToMembership() {
        window.location.href = "/Home/LoginPage"; // Change this URL to your desired destination
    }

</script>
