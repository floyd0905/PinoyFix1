@{
    Layout = "~/Views/Shared/_RegistrationApplicationLayout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="header-container" style="display: flex; align-items: center; justify-content: center; padding: 20px; position: relative; z-index: 10; gap: 20px;">

        <img src="~/wwwroot/assets/images/orca.png" alt="Logo" width="135" height="75" style="float: left; margin-left: 45px; margin-right: 75px;" />

        <input type="text" class="search-bar" placeholder="Search..."
               style="width: 500px; height: 40px; border-radius: 50px; border: 2px solid #ccc; padding: 0 15px; background-color: white; font-size: 16px; margin-right: 50px; outline: none; color: black !important; background: white;">

        <ul id="nav-mobile" style="display: flex; gap: 20px; list-style: none; margin: 0; padding: 0;">

            <li>
                <a href="badges.html" style="text-decoration: none; color: white; padding: 8px 15px; border-radius: 50px; background-color: transparent; border: 2px solid white;">
                    Submit a photo
                </a>
            </li>


            <li>
                <a href="collapsible.html" style="text-decoration: none; color: white; padding: 8px 20px; border-radius: 50px; background-color: black; border: 2px solid black;">
                    Login
                </a>
            </li>
        </ul>
    </div>
</body>
</html>
